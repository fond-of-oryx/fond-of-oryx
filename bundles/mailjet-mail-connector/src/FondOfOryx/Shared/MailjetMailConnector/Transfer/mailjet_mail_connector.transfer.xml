<?xml version="1.0"?>
<transfers xmlns="spryker:transfer-01" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="spryker:transfer-01 http://static.spryker.com/transfer-01.xsd">

    <transfer name="Locale">
        <property name="name" type="string"/>
        <property name="localeName" type="string"/>
    </transfer>

    <transfer name="Mail">
        <property name="locale" type="Locale"/>
        <property name="order" type="Order"/>
        <property name="mailjet" type="MailjetClientRequest"/>
    </transfer>

    <transfer name="Order">
        <property name="billingAddress" type="Address"/>
        <property name="customer" type="Customer"/>
        <property name="totals" type="Totals"/>
        <property name="items" singular="item" type="Item[]"/>
        <property name="voucherDiscounts" singular="voucherDiscount" type="DiscountTransfer[]"/>
        <property name="payments" singular="payment" type="Payment[]"/>
    </transfer>

    <transfer name="Item">
        <property name="shipment" type="Shipment"/>
    </transfer>

    <transfer name="Shipment">
        <property name="shippingAddress" type="Address"/>
    </transfer>

    <transfer name="Address"/>
    <transfer name="Totals"/>
    <transfer name="Discount"/>
    <transfer name="Payment"/>

    <transfer name="Customer">
        <property name="firstName" type="string"/>
        <property name="lastName" type="string"/>
        <property name="email" type="string"/>
    </transfer>

    <transfer name="MailjetClientRequest">
        <property name="from" type="MailjetClientRequestEmail"/>
        <property name="to" type="MailjetClientRequestEmail"/>
        <property name="subject" type="string"/>
        <property name="templateId" type="int"/>
        <property name="locale" type="Locale"/>
        <property name="variables" type="array"/>
        <property name="brand" type="string"/>
    </transfer>

    <transfer name="MailjetClientRequestEmail">
        <property name="email" type="string"/>
        <property name="name" type="string"/>
    </transfer>
</transfers>
